@model MedicationsShortagesDashboard.Models.Shortage 

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<body>
@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "createShortage", @action = "/api/Shortage" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Shortage</legend>

        @Html.HiddenFor(model => model.Id)

        <div class="editor-label">
            @Html.LabelFor(model => model.Ndc)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Ndc)
            @Html.ValidationMessageFor(model => model.Ndc)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Status)
        </div>
        <p>
            <input type="radio" id="good" name="Status" value ="good" />
            <label for="Status"><span id="create_shortage_good_label">Good</span></label>
        </p>

        <p>
            <input type="radio" id="warning" name="Status" value ="warning" />
            <label for="Status"><span id="create_shortage_warning_label">Warning</span></label>
        </p>
        
        <p>
            <input type="radio" id="severe" name="Status" value ="severe" />
            <label for="Status"><span id="create_shortage_severe_label">Severe</span></label>
        </p>
        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}
</body>