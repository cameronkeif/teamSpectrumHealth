
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Scripts.Render("~/bundles/jquery")
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <header>
        <div class="content-wrapper">
             <div class="float-left">
                <nav>
                    <ul id="menu">
                        <li>@Html.ActionLink("Home", "Index", "Home", new { area = "" }, null)</li>
                        <li>@Html.ActionLink("Login", "Index", "Login", new { area = "" }, null)</li>
                        <li>@Html.ActionLink("Pending Shortages", "Index", "PendingShortagesList", new { area = "" }, null)</li>
                    </ul>
                </nav>
            </div>
            <div class="float-right">
                <p class="site-title">
                    <a href="~/"><img id="img_logo" src="~/Images/logo.png" /></a>
                </p>
                <p >Welcome, <span id="userDisplay" title="name">@Html.Encode(ViewData["Username"])</span></p>
            </div>
        </div>
    </header>
    @RenderBody()

    @RenderSection("scripts", required: false)
</body>
</html>


<script type="text/javascript">
    if ($("#userDisplay").text() == "") $("#userDisplay").text();
</script>
